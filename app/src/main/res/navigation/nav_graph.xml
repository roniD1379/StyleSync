<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.application.stylesync.activities.login.LoginFragment"
        android:label="Auth"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_authFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.application.stylesync.activities.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>


    <fragment
        android:id="@+id/profileFragment"
        android:name="com.application.stylesync.activities.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_profileFragment_to_createNewPostFragment"
            app:destination="@id/createNewPostFragment" />
    </fragment>

    <fragment
        android:id="@+id/createNewPostFragment"
        android:name="com.application.stylesync.activities.create_new_post.CreateNewPostFragment"
        android:label="Create New Post"
        tools:layout="@layout/fragment_create_new_post" >
    </fragment>

<fragment
        android:id="@+id/registerFragment"
        android:name="com.application.stylesync.activities.register.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register" >
    <action
        android:id="@+id/action_registerFragment_to_loginFragment"
        app:destination="@id/loginFragment" />
</fragment>






</navigation>